<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets>
        <target name="traceFile" xsi:type="File" fileName="${shortdate}-trace.log"
			layout="[${longdate}] [${level:uppercase=true}] [${callsite:includeNamespace=false}] ${message:withexception=true}" />
        <target name="latestFile" xsi:type="File" fileName="latest.log"
			layout="[${longdate}] [${level:uppercase=true}] [${callsite:includeNamespace=false}] ${message:withexception=true}" />
        <target name="console" xsi:type="ColoredConsole"
			layout="[${longdate}] [${level:uppercase=true}] [${callsite:includeNamespace=false}] ${message:withexception=true}" />
    </targets>

    <rules>
        <logger name="*" minlevel="Trace" writeTo="traceFile" />
        <logger name="*" minlevel="Debug" writeTo="latestFile" />
        <logger name="*" minlevel="Debug" writeTo="console" />
    </rules>

</nlog>